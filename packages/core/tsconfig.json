{
    "extends": "@mfext/config/tsconfig",
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "paths": {
            "@/*": ["./src/*"],
            "@/tools/*": ["./src/tools/*"],
            "@/types/*": ["./src/types/*"]
        }
    },
    "include": ["src/**/*", "rsc-server.tsx", "ssr-server.tsx", "global.d.ts"],
    "exclude": ["node_modules", "dist", "public"]
}
